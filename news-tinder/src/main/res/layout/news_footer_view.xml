<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btn_unlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/unlike_background_oval"
        android:contentDescription="@null"
        android:elevation="2dp"
        android:padding="24dp"
        android:src="@drawable/thumbs_up_outline_28"
        app:layout_constraintBottom_toTopOf="@id/tv_unlike"
        app:layout_constraintEnd_toStartOf="@id/btn_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_unlike"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="@string/unlike"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_unlike"
        app:layout_constraintStart_toStartOf="@id/btn_unlike"
        app:layout_constraintTop_toBottomOf="@id/btn_unlike" />

    <ImageButton
        android:id="@+id/btn_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/like_background_oval"
        android:contentDescription="@null"
        android:elevation="2dp"
        android:padding="24dp"
        android:src="@drawable/like_outline_28"
        app:layout_constraintBottom_toTopOf="@id/tv_like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_unlike"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="@string/like"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/btn_like"
        app:layout_constraintStart_toStartOf="@id/btn_like"
        app:layout_constraintTop_toBottomOf="@id/btn_like" />

</androidx.constraintlayout.widget.ConstraintLayout>